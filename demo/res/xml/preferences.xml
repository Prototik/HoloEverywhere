<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:holo="http://schemas.android.com/apk/res-auto" >
	<Preference
		holo:icon="@drawable/prefs_icon"
		holo:selectable="false"
		holo:summary="Preference Demo"
		holo:title="HoloEverywhere" />
	<PreferenceCategory holo:title="Base" >
		<EditTextPreference
			holo:dialogIcon="@drawable/icon"
			holo:dialogTitle="Enter message:"
			holo:summary="Tap me!"
			holo:title="EditText" />
		<CheckBoxPreference
			holo:defaultValue="false"
			holo:summaryOff="I not checked ;("
			holo:summaryOn="I checked! :)"
			holo:title="CheckBox" />
		<RingtonePreference
			holo:key="ringtone"
			holo:ringtoneType="all"
			holo:summary="I love music!"
			holo:title="Ringtone" />
		<SwitchPreference
			holo:summaryOff="Noooooo! ;("
			holo:summaryOn="Yes, man! :)"
			holo:switchTextOff="OFF"
			holo:switchTextOn="ON"
			holo:title="Switch" />
		<NumberPickerPreference
			holo:dialogIcon="@drawable/icon"
			holo:defaultValue="10"
			holo:maxValue="25"
			holo:minValue="5"
			holo:wrapSelectorWheel="false"
			holo:summary="Bring up a dialog!"
			holo:title="NumberPicker"
			holo:dialogMessage="Play NumberPicker roulette!" />
	</PreferenceCategory>
	<PreferenceCategory holo:title="Lists" >
		<ListPreference
			holo:dialogIcon="@drawable/icon"
			holo:dialogTitle="Skillet"
			holo:entries="@array/skillet"
			holo:entryValues="@array/skillet"
			holo:negativeButtonText="I love Skillet!"
			holo:summary="Skillet"
			holo:title="List" />
		<MultiSelectListPreference
			holo:dialogIcon="@drawable/icon"
			holo:dialogTitle="Nirvana"
			holo:entries="@array/nirvana"
			holo:entryValues="@array/nirvana"
			holo:positiveButtonText="I love Nirvana!"
			holo:summary="Nirvana"
			holo:title="MultiSelectList" />
	</PreferenceCategory>
	<PreferenceCategory holo:title="Hidden (in the past)" >
		<SeekBarPreference
			holo:max="100"
			holo:title="SeekBar" />
		<SeekBarDialogPreference
			holo:max="100"
			holo:title="SeekBarDialog" />
	</PreferenceCategory>
</PreferenceScreen>